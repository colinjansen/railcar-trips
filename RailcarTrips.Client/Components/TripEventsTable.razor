@if (TripEvents.Count > 0)
{
    <h3>Trip Events</h3>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Event Code</th>
                <th>City</th>
                <th>Local Time</th>
                <th>UTC Time</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var evt in TripEvents)
        {
            <tr>
                <td>@evt.EventCode</td>
                <td>@evt.City</td>
                <td>@evt.EventLocalTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@evt.EventUtcTime.ToString("u")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public IReadOnlyList<TripEventDto> TripEvents { get; set; } = [];
}
